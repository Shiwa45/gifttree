# ==============================================
# PRODUCTION ENVIRONMENT VARIABLES
# Copy this to .env on your production server
# ==============================================

# Django Settings
DEBUG=False
SECRET_KEY=your-very-long-secret-key-change-this-in-production-make-it-random-and-secure
ALLOWED_HOSTS=mygiftstree.com,www.mygiftstree.com
ENABLE_HTTPS=True

# Site Configuration
SITE_DOMAIN=mygiftstree.com
CSRF_TRUSTED_ORIGINS=https://mygiftstree.com,https://www.mygiftstree.com

# Database (SQLite or PostgreSQL)
# For SQLite (default):
DB_ENGINE=sqlite3

# For PostgreSQL (recommended for production):
# DB_ENGINE=postgresql
# DB_NAME=gifttree_db
# DB_USER=gifttree_user
# DB_PASSWORD=your-secure-database-password
# DB_HOST=localhost
# DB_PORT=5432

# Google OAuth Credentials
# Get these from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=1234567890-abcdefghijklmnopqrstuvwxyz123456.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-AbCdEf1234567890GhIjKlMnOp

# Razorpay Payment Gateway
RAZORPAY_KEY_ID=rzp_live_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret

# Email Configuration (Optional)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST_USER=noreply@mygiftstree.com
EMAIL_HOST_PASSWORD=your-email-app-password

# Cache Configuration (Optional - use Redis for better performance)
CACHE_BACKEND=db
# CACHE_BACKEND=redis
# REDIS_URL=redis://127.0.0.1:6379/1

# ==============================================
# QUICK SETUP CHECKLIST:
# ==============================================
# 1. Copy this file to .env on your server
# 2. Update all values with your actual credentials
# 3. Generate a new SECRET_KEY (use: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())")
# 4. Add your Google OAuth credentials from Google Cloud Console
# 5. Add your Razorpay keys for payment processing
# 6. Restart your application: sudo systemctl restart gunicorn && sudo systemctl restart nginx

