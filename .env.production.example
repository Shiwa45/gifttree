# ============================================
# GiftTree Production Environment Variables
# ============================================
# Copy this file to .env and update with your production values

# ============================================
# DJANGO CORE SETTINGS
# ============================================

# Generate a new secret key for production using:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-strong-random-secret-key-here

# Set to False for production
DEBUG=False

# Add your domain and server IP (comma-separated, no spaces)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-server-ip

# ============================================
# DATABASE CONFIGURATION
# ============================================

# OPTION 1: SQLite (Same as development - Recommended for small to medium sites)
# No configuration needed, just set:
DB_ENGINE=sqlite3

# OPTION 2: PostgreSQL (For larger sites with high traffic)
# Uncomment and configure these:
# DB_ENGINE=postgresql
# DB_NAME=gifttree_db
# DB_USER=gifttree_user
# DB_PASSWORD=your_secure_password_here
# DB_HOST=localhost
# DB_PORT=5432

# ============================================
# SECURITY & HTTPS
# ============================================

# Set to True if you have SSL/HTTPS configured
# Set to False if using HTTP only (testing/internal)
ENABLE_HTTPS=False

# If using HTTPS, also update ALLOWED_HOSTS to use https://

# ============================================
# EMAIL CONFIGURATION
# ============================================

# For production, use SMTP backend
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# Gmail SMTP (or use your own SMTP server)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-gmail-app-password

# Note: For Gmail, generate an App Password:
# https://myaccount.google.com/apppasswords

# ============================================
# PAYMENT GATEWAY - RAZORPAY
# ============================================

# Use LIVE keys for production
RAZORPAY_KEY_ID=rzp_live_your_key_id
RAZORPAY_KEY_SECRET=your_live_key_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# Get your live keys from: https://dashboard.razorpay.com/

# ============================================
# CACHE CONFIGURATION
# ============================================

# OPTION 1: Database cache (default, no extra setup needed)
CACHE_BACKEND=db

# OPTION 2: Redis cache (faster, requires Redis server)
# CACHE_BACKEND=redis
# REDIS_URL=redis://127.0.0.1:6379/1

# ============================================
# SITE CONFIGURATION
# ============================================

SITE_NAME=GiftTree
SITE_DOMAIN=yourdomain.com

# ============================================
# AWS S3 (OPTIONAL - For media file storage)
# ============================================
# Uncomment if you want to store media files on AWS S3

# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_STORAGE_BUCKET_NAME=your_bucket_name
# AWS_S3_REGION_NAME=us-east-1
# USE_S3=True

# ============================================
# MONITORING & LOGGING (OPTIONAL)
# ============================================

# Sentry for error tracking (optional)
# SENTRY_DSN=your_sentry_dsn

# ============================================
# NOTES
# ============================================

# 1. Never commit this file to version control
# 2. Keep backups of this file in a secure location
# 3. Regenerate SECRET_KEY for production
# 4. Use strong passwords for database and email
# 5. Enable HTTPS in production for security
